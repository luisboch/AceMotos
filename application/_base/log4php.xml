<configuration xmlns="http://logging.apache.org/log4php/">
	<appender name="warnAppender" class="LoggerAppenderDailyFile">
                <layout class="LoggerLayoutPattern">
                    <param name="conversionPattern" value="%p %d{Y-m-d H:i:s.u} %c{3}->%M:%L %m%n" />
                </layout>
                <param name="file" value="/var/www/PHPFarm/logs/application-%s.log" />
                <param name="datePattern" value="Y-m-d" />
	</appender>
	<root>
		<appender_ref ref="warnAppender" />
	</root>
</configuration>